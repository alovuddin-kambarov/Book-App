<?xml version="1.0" encoding="utf-8"?><MotionScene xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:motion="http://schemas.android.com/apk/res-auto">    <Transition        motion:constraintSetEnd="@+id/end"        motion:constraintSetStart="@id/start"        motion:duration="1000">        <KeyFrameSet>            <KeyAttribute                android:rotationX="5"                motion:framePosition="60"                motion:motionTarget="@+id/btn1" />            <KeyAttribute                android:scaleX="1.2"                motion:framePosition="59"                motion:motionTarget="@+id/card" />            <KeyAttribute                android:rotationX="5"                motion:framePosition="60"                motion:motionTarget="@+id/textView" />            <KeyAttribute                android:alpha="0.5"                motion:framePosition="29"                motion:motionTarget="@+id/btn1" />            <KeyAttribute                android:alpha="0.2"                android:translationY="50dp"                motion:framePosition="10"                motion:motionTarget="@+id/ll" />            <KeyAttribute                android:alpha="0.2"                android:translationY="50dp"                motion:framePosition="10"                motion:motionTarget="@+id/textView" />        </KeyFrameSet>        <OnSwipe motion:touchAnchorId="@+id/scroll" />    </Transition>    <ConstraintSet android:id="@+id/start">    </ConstraintSet>    <ConstraintSet android:id="@+id/end">        <Constraint            android:id="@+id/cons"            android:layout_width="match_parent"            android:layout_height="60dp"            motion:layout_constraintBottom_toTopOf="@id/scroll"            motion:layout_constraintTop_toTopOf="parent" />        <Constraint            android:id="@+id/card"            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:visibility="invisible"            motion:layout_constraintBottom_toTopOf="@id/scroll"            motion:layout_constraintTop_toTopOf="parent" />        <Constraint            android:id="@+id/btn1"            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:visibility="invisible"            motion:layout_constraintBottom_toTopOf="@id/scroll"            motion:layout_constraintTop_toTopOf="parent" />        <Constraint            android:id="@+id/tv"            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:layout_marginTop="@dimen/_12sdp"            motion:layout_constraintTop_toTopOf="parent" />        <Constraint            android:id="@+id/textView"            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:visibility="invisible" />    </ConstraintSet></MotionScene>